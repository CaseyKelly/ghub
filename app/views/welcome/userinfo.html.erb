<div class="col-md-10">
  <div class="pull-left">
    <div class="well" style="width: 400px">
      <img src="<%= @user.avatar_url %>" height=360px>
      <p><h3><%= @user.name %></h3>
      <p><b>User Login:</b> <%= @user.login %>
      <p><b>User ID:</b> <%= @user.id %>
      <p><b>Location:</b> <%= @user.location %>
      <p><b>Email:</b> <%= @user.email %>
      <p><b>No. of public repos:</b> <%= @user.public_repos %>
      <p><b>No. of followers:</b> <%= @user.followers %>
      <p><b>GitHub URL:</b> <a href="<%= @user.html_url %>"><%= @user.html_url %></a>
      <p><b>GitHub Birthday:</b> <%= @user.created_at.strftime("%B %-d, %Y") %>
    </div>
  </div>

  <div class="pull-right">
    <blockquote><h3><%= @user.name %>'s repos:</h3>
      <ul>
        <% @respositories.each do |repo| %>
          <li> <%= repo.name %> </li>
        <% end %>
      </ul>
    </blockquote>
  </div>
</div>
